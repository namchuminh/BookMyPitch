<%- include('../layouts/header.ejs') %>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<header class="page">
    <div class="container">
        <ul class="breadcrumbs d-flex flex-wrap align-content-center">
            <li class="list-item">
                <a class="link" href="/">Trang Chủ</a>
            </li>

            <li class="list-item">
                <a class="link" href="/rooms/">Sân Bóng</a>
            </li>

            <li class="list-item">
                <a class="link" href="#"><%= pitch.Name %></a>
            </li>
        </ul>
        <h1 class="page_title"><%= pitch.Name %></h1>
    </div>
</header>
<main>
    <!-- room section start -->
    <div class="room section">
        <div class="container">
            <div class="room_main d-lg-flex flex-wrap align-items-start">
                <% if(image.length >= 1){ %>
                    <div class="room_main-slider col-12 d-lg-flex">
                        <div class="room_main-slider_view col-lg-8 swiper-fade swiper-initialized swiper-horizontal swiper-pointer-events">
                            <div class="swiper-wrapper" style="transition-duration: 1500ms;">
                                <div class="swiper-slide swiper-slide-prev" data-swiper-slide-index="0" style="width: 764px; opacity: 1; transform: translate3d(-764px, 0px, 0px); transition-duration: 1500ms;">
                                    <picture>
                                        <source data-srcset="<%= image[0].dataValues.Image %>" srcset="<%= image[0].dataValues.Image %>">
                                        <img class="lazy entered loaded" data-src="<%= image[0].dataValues.Image %>" src="<%= image[0].dataValues.Image %>" alt="media" data-ll-status="loaded">
                                    </picture>
                                </div>

                                <% if(image.length >= 2){ %>
                                <div class="swiper-slide swiper-slide-visible swiper-slide-active" data-swiper-slide-index="1" style="width: 764px; opacity: 1; transform: translate3d(-1528px, 0px, 0px); transition-duration: 1500ms;">
                                    <picture>
                                        <source data-srcset="<%= image[1].dataValues.Image %>" srcset="<%= image[1].dataValues.Image %>">
                                        <img class="lazy entered loaded" data-src="<%= image[1].dataValues.Image %>" src="<%= image[1].dataValues.Image %>" alt="media" data-ll-status="loaded">
                                    </picture>
                                </div>
                                <% } %>

                                <% if(image.length >= 3){ %>
                                <div class="swiper-slide swiper-slide-next" data-swiper-slide-index="2" style="width: 764px; opacity: 0; transform: translate3d(-2292px, 0px, 0px); transition-duration: 1500ms;">
                                    <picture>
                                        <source data-srcset="<%= image[2].dataValues.Image %>" srcset="<%= image[2].dataValues.Image %>">
                                        <img class="lazy entered loaded" data-src="<%= image[2].dataValues.Image %>" src="<%= image[2].dataValues.Image %>" alt="media" data-ll-status="loaded">
                                    </picture>
                                </div>
                                <% } %>

                                <% if(image.length >= 4){ %>
                                    <div class="swiper-slide swiper-slide-next" data-swiper-slide-index="2" style="width: 764px; opacity: 0; transform: translate3d(-2292px, 0px, 0px); transition-duration: 1500ms;">
                                        <picture>
                                            <source data-srcset="<%= image[3].dataValues.Image %>" srcset="<%= image[3].dataValues.Image %>">
                                            <img class="lazy entered loaded" data-src="<%= image[3].dataValues.Image %>" src="<%= image[3].dataValues.Image %>" alt="media" data-ll-status="loaded">
                                        </picture>
                                    </div>
                                <% } %>
                            </div>
                            <div class="swiper-controls d-flex align-items-center justify-content-between">
                                <a class="swiper-button-prev d-inline-flex align-items-center justify-content-center" href="#">
                                    <i class="icon-arrow_left icon"></i>
                                </a>
                                <a class="swiper-button-next d-inline-flex align-items-center justify-content-center" href="#">
                                    <i class="icon-arrow_right icon"></i>
                                </a>
                            </div>
                        </div>
                        <div class="room_main-slider_thumbs swiper-initialized swiper-pointer-events swiper-vertical">
                            <div class="swiper-wrapper" style="transform: translate3d(0px, -855px, 0px); transition-duration: 1500ms;">
                                
                                <div class="swiper-slide swiper-slide-prev" data-swiper-slide-index="0" style="height: 255px; margin-bottom: 30px;">
                                    <picture>
                                        <source data-srcset="<%= image[0].dataValues.Image %>" srcset="<%= image[0].dataValues.Image %>">
                                        <img class="lazy entered loaded" data-src="<%= image[0].dataValues.Image %>" src="<%= image[0].dataValues.Image %>" alt="media" data-ll-status="loaded">
                                    </picture>
                                </div>
                                
                                <% if(image.length >= 2){ %>
                                    <div class="swiper-slide swiper-slide-visible swiper-slide-next" data-swiper-slide-index="2" style="height: 255px; margin-bottom: 30px;">
                                        <picture>
                                            <source data-srcset="<%= image[1].dataValues.Image %>" srcset="<%= image[1].dataValues.Image %>">
                                            <img class="lazy entered loaded" data-src="<%= image[1].dataValues.Image %>" src="<%= image[1].dataValues.Image %>" alt="media" data-ll-status="loaded">
                                        </picture>
                                    </div>
                                <% } %>

                                <% if(image.length >= 3){ %>
                                <div class="swiper-slide swiper-slide-visible swiper-slide-next" data-swiper-slide-index="2" style="height: 255px; margin-bottom: 30px;">
                                    <picture>
                                        <source data-srcset="<%= image[2].dataValues.Image %>" srcset="<%= image[2].dataValues.Image %>">
                                        <img class="lazy entered loaded" data-src="<%= image[2].dataValues.Image %>" src="<%= image[2].dataValues.Image %>" alt="media" data-ll-status="loaded">
                                    </picture>
                                </div>
                                <% } %>

                                <% if(image.length >= 4){ %>
                                    <div class="swiper-slide swiper-slide-visible swiper-slide-active" data-swiper-slide-index="1" style="height: 255px; margin-bottom: 30px;">
                                        <picture>
                                            <source data-srcset="<%= image[3].dataValues.Image %>" srcset="<%= image[3].dataValues.Image %>">
                                            <img class="lazy entered loaded" data-src="<%= image[3].dataValues.Image %>" src="<%= image[3].dataValues.Image %>" alt="media" data-ll-status="loaded">
                                        </picture>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% } %>
                <div class="room_main-info col-lg-8">
                    <div class="amenities d-flex flex-wrap align-items-center">
                        <span class="amenities_item d-inline-flex align-items-center">
                            <i class="fas fa-futbol" style="margin-right: 10px;"></i> Sân đá <%= pitch.People %> 
                        </span>
                        <span class="amenities_item d-inline-flex align-items-center">
                            <% if(facility[0].dataValues.Water == 1){ %>
                                <i class="fas fa-glass-whiskey" style="margin-right: 10px;"></i> Có tặng nước
                            <% }else{ %>
                                <i class="fas fa-glass-whiskey" style="margin-right: 10px;"></i> Không tặng nước
                            <% } %>
                            
                        </span>
                        <span class="amenities_item d-inline-flex align-items-center">
                            <% if(facility[0].dataValues.Referee == 1){ %>
                                <i class="fas fa-user-tie" style="margin-right: 10px;"></i> Có trọng tài
                            <% }else{ %>
                                <i class="fas fa-user-tie" style="margin-right: 10px;"></i> Không trọng tài
                            <% } %>
                        </span>
                    </div>
                    <div class="amenities d-flex flex-wrap align-items-center">
                        <span class="amenities_item d-inline-flex align-items-center">
                            <i class="fas fa-map-marker-alt" style="margin-right: 10px;"></i> 
                            <% if(!pitch.Address){ %>
                                Đang cập nhật ...
                            <% }else{ %>
                                <%= pitch.Address %>
                            <% } %>
                        </span>
                    </div>
                    <div class="description">
                        <%- pitch.Description %> 
                    </div>
                    <section class="facilities">
                        <h4 class="facilities_header">Tiện ích của sân</h4>
                        <div class="facilities_list d-sm-flex flex-wrap">
                            <div class="facilities_list-block" style="line-height: 45px;">
                                <span class="amenities_item d-inline-flex align-items-center">
                                    <% if(facility[0].dataValues.Shirt == 1){ %>
                                        <i class="fas fa-tshirt" style="margin-right: 10px;"></i> Cấp trang phục
                                    <% }else{ %>
                                        <i class="fas fa-tshirt" style="margin-right: 10px;"></i> Không trang phục
                                    <% } %>
                                    
                                </span>
                                <span class="amenities_item d-inline-flex align-items-center">
                                    <% if(facility[0].dataValues.Water == 1){ %>
                                        <i class="fas fa-glass-whiskey" style="margin-right: 10px;"></i> Có tặng nước
                                    <% }else{ %>
                                        <i class="fas fa-glass-whiskey" style="margin-right: 10px;"></i> Không tặng nước
                                    <% } %>
                                    
                                </span>
                                <span class="amenities_item d-inline-flex align-items-center">
                                    <% if(facility[0].dataValues.Referee == 1){ %>
                                        <i class="fas fa-user-tie" style="margin-right: 10px;"></i> Có trọng tài
                                    <% }else{ %>
                                        <i class="fas fa-user-tie" style="margin-right: 10px;"></i> Không trọng tài
                                    <% } %>
                                </span>
                            </div>
                            <div class="facilities_list-block">

                            </div>
                            <div class="facilities_list-block" style="line-height: 45px;">
                                <span class="amenities_item d-inline-flex align-items-center">
                                    <% if(facility[0].dataValues.Shoe == 1){ %>
                                        <i class="fas fa-shoe-prints" style="margin-right: 10px;"></i> Cho thuê giày
                                    <% }else{ %>
                                        <i class="fas fa-shoe-prints" style="margin-right: 10px;"></i> Không thuê giày
                                    <% } %>
                                    
                                </span>
                                <span class="amenities_item d-inline-flex align-items-center">
                                    <% if(facility[0].dataValues.Ball == 1){ %>
                                        <i class="fas fa-futbol" style="margin-right: 10px;"></i> Cho mượn bóng
                                    <% }else{ %>
                                        <i class="fas fa-futbol" style="margin-right: 10px;"></i> Không mượn bóng
                                    <% } %>
                                    
                                </span>
                                <span class="amenities_item d-inline-flex align-items-center">
                                    <% if(facility[0].dataValues.Bathroom == 1){ %>
                                        <i class="fas fa-bath" style="margin-right: 10px;"></i> Có phòng tắm
                                    <% }else{ %>
                                        <i class="fas fa-bath" style="margin-right: 10px;"></i> Không phòng tắm
                                    <% } %>
                                </span>
                            </div>
                        </div>
                    </section>

                    <% if(rule.length >= 1){ %>
                        <section class="rules">
                            <h4 class="rules_header">Quy tắc thuê Sân</h4>
                            <div class="rules_list d-md-flex flex-lg-wrap">
                                <div class="rules_list-block">
                                    <p class="rules_list-block_item d-flex align-items-baseline">
                                        <i class="icon-check icon"></i>
                                        <%= rule[0].dataValues.Rules %>
                                    </p>
                                    <% if(rule.length >= 2){ %>
                                        <p class="rules_list-block_item d-flex align-items-baseline">
                                            <i class="icon-check icon"></i>
                                            <%= rule[1].dataValues.Rules %>
                                        </p>
                                    <% } %>

                                    <% if(rule.length >= 3){ %>
                                        <p class="rules_list-block_item d-flex align-items-baseline">
                                            <i class="icon-check icon"></i>
                                            <%= rule[2].dataValues.Rules %>
                                        </p>
                                    <% } %>
                                </div>
                                <div class="rules_list-block">
                                    <% if(rule.length >= 4){ %>
                                        <p class="rules_list-block_item d-flex align-items-baseline">
                                            <i class="icon-check icon"></i>
                                            <%= rule[3].dataValues.Rules %>
                                        </p>
                                    <% } %>
                                    <% if(rule.length >= 5){ %>
                                        <p class="rules_list-block_item rules_list-block_item--highlight d-flex align-items-start">
                                            <i class="icon-check icon"></i>
                                            <%= rule[4].dataValues.Rules %>
                                        </p>
                                    <% } %>
                                </div>
                            </div>
                        </section>
                    <% } %>
                </div>
                <div class="room_main-cards col-lg-4">
                    <div class="room_main-cards_card">
                        <span class="pricing">
                            <span class="pricing_price h2" style="font-size: 30px;"><%= pitch.Price.toLocaleString() %>đ</span>
                            / 90 phút
                        </span>
                        <form class="booking" action="/dat-san/" method="post" autocomplete="off" data-type="booking">
                            <input type="hidden" name="PitchId" value="<%= pitch.Id %>">
                            <div class="booking_group d-flex flex-column">
                                <label class="booking_group-label h5" for="checkIn">Ngày thuê Sân</label>
                                <div class="booking_group-wrapper">
                                    <i class="icon-calendar icon"></i>
                                    <input class="booking_group-field field required" type="date" name="startDate">
                                </div>
                            </div>
                            <div class="booking_group d-flex flex-column">
                                <label class="booking_group-label h5" for="checkOut">Giờ Thuê Sân</label>
                                <div class="booking_group-wrapper">
                                    <i class="icon-calendar icon"></i>
                                    <input class="booking_group-field field required" type="time" name="endDate">
                                </div>
                            </div>
                            <button class="booking_btn btn theme-element theme-element--accent" type="submit">Đặt Sân</button>
                        </form>
                    </div>
                    <div class="room_main-cards_card accent">
                        <h3 class="title">Khuyến mãi </h3>
                        <p class="text">Bạn sẽ được giảm giá sân bóng khi thuê với thời gian dài!</p>
                        <div class="content">
                            <p class="text">Giảm tới <b>20%</b> khi thuê sân vào khung giờ 10h sáng - 15h chiều</p>
                            <p class="text">Giảm tới <b>30%</b> khi thuê sân vào khung giờ 22h đêm - 2h sáng</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- room section start -->
    <!-- recommendation section start -->
    <section class="recommendation section">
        <div class="container d-xl-flex">
            <div class="main">
                <h4 class="main_subtitle">Đề xuất cho bạn</h4>
                <h2 class="main_title aos-init aos-animate" data-aos="fade-up" ><%= related[0].dataValues.Name %></h2>
                <div class="main_amenities d-flex flex-wrap align-items-center">
                    <span class="main_amenities-item d-inline-flex align-items-center aos-init aos-animate" data-aos="fade-up">
                        <i class="fas fa-futbol" style="margin-right: 10px;"></i> Sân đá <%= pitch.People %> 
                    </span>
                    <% if(related[0].facility.dataValues.Referee == 1){ %>
                        <span class="main_amenities-item d-inline-flex align-items-center aos-init aos-animate" data-aos="fade-up">
                            <i class="fas fa-user-tie" style="margin-right: 10px;"></i> Có trọng tài
                        </span>
                    <% }else{ %>
                        <span class="main_amenities-item d-inline-flex align-items-center aos-init aos-animate" data-aos="fade-up">
                            <i class="fas fa-user-tie" style="margin-right: 10px;"></i> Không trọng tài
                        </span>
                    <% } %>
                </div>
                <p class="main_text aos-init aos-animate" data-aos="fade-up" data-aos-delay="50">
                    <%- related[0].dataValues.Description.substring(0, 128) %> ...
                </p>
                <ul class="main_list">
                    <li class="main_list-item d-flex align-items-center aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
                        <% if(related[0].facility.dataValues.Water == 1){ %>
                            <i class="fas fa-glass-whiskey" style="margin-right: 10px;"></i> Có tặng nước
                        <% }else{ %>
                            <i class="fas fa-glass-whiskey" style="margin-right: 10px;"></i> Không tặng nước
                        <% } %>
                    </li>
                    <li class="main_list-item d-flex align-items-center aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
                        <% if(related[0].facility.dataValues.Ball == 1){ %>
                            <i class="fas fa-futbol" style="margin-right: 10px;"></i> Cho mượn bóng
                        <% }else{ %>
                            <i class="fas fa-futbol" style="margin-right: 10px;"></i> Không mượn bóng
                        <% } %>
                    </li>
                    <li class="main_list-item d-flex align-items-center aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
                        <% if(related[0].facility.dataValues.Water == 1){ %>
                            <i class="fas fa-tshirt" style="margin-right: 10px;"></i> Cấp trang phục
                        <% }else{ %>
                            <i class="fas fa-tshirt" style="margin-right: 10px;"></i> Cấp trang phục
                        <% } %>
                    </li>
                </ul>
                <div class="wrapper aos-init aos-animate" data-aos="fade-up">
                    <a class="btn theme-element theme-element--accent" href="/san-bong/<%= related[0].dataValues.Slug %>/">Xem Thêm</a>
                </div>
            </div>
            <div class="media aos-init aos-animate" data-aos="fade-up">
                <picture>
                    <source data-srcset="<%= related[0].dataValues.Avatar %>" srcset="<%= related[0].dataValues.Avatar %>">
                    <img width="570" height="570" class="lazy entered loaded" data-src="<%= related[0].dataValues.Avatar %>" src="<%= related[0].dataValues.Avatar %>" alt="media" data-ll-status="loaded">
                </picture>
            </div>
        </div>
    </section>


    <% if(related.length >= 2){ %>
        <section class="rooms section--blockbg section">
            <div class="block"></div>
            <div class="container">
                <div class="rooms_header d-sm-flex justify-content-between align-items-center">
                    <h2 class="rooms_header-title aos-init aos-animate" data-aos="fade-right" style="font-size: 30px;">Sân bóng khác</h2>
                    <div class="wrapper aos-init aos-animate" data-aos="fade-left">
                        <a class="btn theme-element theme-element--light d-flex" href="/san-bong/">Xem tất cả</a>
                    </div>
                </div>
                <ul class="rooms_list d-md-flex flex-wrap">
                    <% for (let i = 1; i < related.length; i++) { %>
                        <li class="rooms_list-item col-md-6 col-xl-4 aos-init aos-animate" data-order="1" data-aos="fade-up">
                            <div class="item-wrapper d-md-flex flex-column">
                                <div class="media">
                                    <picture>
                                        <source data-srcset="<%= related[i].dataValues.Avatar %>" srcset="<%= related[i].dataValues.Avatar %>">
                                        <img class="lazy entered loaded" data-src="<%= related[i].dataValues.Avatar %>" src="<%= related[i].dataValues.Avatar %>" alt="media" data-ll-status="loaded">
                                    </picture>
                                    <span class="media_label media_label--pricing">
                                        <span class="price h4"><%= related[i].dataValues.Price.toLocaleString() %>đ</span>
                                        / 90 phút
                                    </span>
                                </div>
                                <div class="main d-md-flex flex-column justify-content-between flex-grow-1">
                                    <a class="main_title h4" href="/san-bong/<%= related[i].dataValues.Slug %>/" data-shave="true"><%= related[i].dataValues.Name %></a>
                                    <div class="main_amenities">
                                        <span class="main_amenities-item d-inline-flex align-items-center">
                                            <i class="fas fa-futbol" style="margin-right: 10px;"></i>
                                            Sân đá <%= related[i].dataValues.People %>
                                        </span>
                                        <span class="main_amenities-item d-inline-flex align-items-center">
                                            <% if(related[i].facility.Referee == 1){ %>
                                                <i class="fas fa-user-tie" style="margin-right: 10px;"></i> Có trọng tài
                                            <% }else{ %>
                                                <i class="fas fa-user-tie" style="margin-right: 10px;"></i> Không trọng tài
                                            <% } %>
                                        </span>
                                    </div>
                                    <a class="link link--arrow d-inline-flex align-items-center" href="/san-bong/<%= related[i].dataValues.Slug %>/">
                                        Xem chi tiết
                                        <i class="icon-arrow_right icon"></i>
                                    </a>
                                </div>
                            </div>
                        </li>
                    <% } %>
                </ul>
            </div>
        </section>
    <% } %>
    <!-- rooms section end -->
    <!-- single room content start -->
</main>
<%- include('../layouts/footer.ejs') %>
