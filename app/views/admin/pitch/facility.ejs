<%- include('../layouts/header.ejs') %>
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h4 class="mb-0 font-size-18">Sân Bóng</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/admin/">Trang Chủ</a>
                                </li>
                                <li class="breadcrumb-item"><a href="/admin/pitch/">Sân Bóng</a></li>
                                <li class="breadcrumb-item active">Tiện Ích Sân Bóng</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Tiện ích cho sân: <%= pitch.Name %></h4>
                        <div id="basic-datatable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                            <div class="row">
                                <div class="col-xl-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <form method="POST">
                                                <div class="form-group row">
                                                    <div class="col-md-4">
                                                        <label for="simpleinput">Cấp trang phục?</label>
                                                        <select class="form-control" name="shirt">
                                                            <% if(facility.Shirt == 1){ %>
                                                                <option value="1" selected>Có</option>
                                                                <option value="0">Không</option>
                                                            <% }else{ %>
                                                                <option value="1">Có</option>
                                                                <option value="0" selected>Không</option>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label for="simpleinput">Tặng nước uống?</label>
                                                        <select class="form-control" name="water">
                                                            <% if(facility.Water == 1){ %>
                                                                <option value="1" selected>Có</option>
                                                                <option value="0">Không</option>
                                                            <% }else{ %>
                                                                <option value="1">Có</option>
                                                                <option value="0" selected>Không</option>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label for="simpleinput">Có trọng tài?</label>
                                                        <select class="form-control" name="referee">
                                                            <% if(facility.Referee == 1){ %>
                                                                <option value="1" selected>Có</option>
                                                                <option value="0">Không</option>
                                                            <% }else{ %>
                                                                <option value="1">Có</option>
                                                                <option value="0" selected>Không</option>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-md-4">
                                                        <label for="simpleinput">Cho thuê giày?</label>
                                                        <select class="form-control" name="shoe">
                                                            <% if(facility.Shoe == 1){ %>
                                                                <option value="1" selected>Có</option>
                                                                <option value="0">Không</option>
                                                            <% }else{ %>
                                                                <option value="1">Có</option>
                                                                <option value="0" selected>Không</option>
                                                            <% } %>
                                                        </select>
                                                    </div>

                                                    <div class="col-md-4">
                                                        <label for="simpleinput">Có phòng tắm?</label>
                                                        <select class="form-control" name="bathroom">
                                                            <% if(facility.Bathroom == 1){ %>
                                                                <option value="1" selected>Có</option>
                                                                <option value="0">Không</option>
                                                            <% }else{ %>
                                                                <option value="1">Có</option>
                                                                <option value="0" selected>Không</option>
                                                            <% } %>
                                                        </select>
                                                    </div>

                                                    <div class="col-md-4">
                                                        <label for="simpleinput">Cung cấp bóng?</label>
                                                        <select class="form-control" name="ball">
                                                            <% if(facility.Ball == 1){ %>
                                                                <option value="1" selected>Có</option>
                                                                <option value="0">Không</option>
                                                            <% }else{ %>
                                                                <option value="1">Có</option>
                                                                <option value="0" selected>Không</option>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                </div>


                                                <a href="/admin/pitch/"
                                                    class="btn btn-secondary waves-effect waves-light">Quay Lại</a>
                                                <button type="submit"
                                                    class="btn btn-primary waves-effect waves-light">Cập Nhật
                                                    Tiện Ích</button>
                                            </form>
                                        </div>
                                        <!-- end card-body-->
                                    </div>
                                    <!-- end card -->

                                </div>
                            </div>

                        </div>

                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div><!-- end col-->
        </div>
    </div>
    <%- include('../layouts/footer.ejs') %>